if has("syntax")
	syntax on
endif

if has("autocmd") 
	au BufReadPost * if line("'\"") > 1 && line("'\"") <= line("$") | exe "no    rmal! g'\"" | endif
endif

set hlsearch
set nu
set autoindent
set ts=4
set sts=4
set cindent
set laststatus=2
set shiftwidth=4
set showmatch
set smartcase
set smarttab
set smartindent
set ruler
